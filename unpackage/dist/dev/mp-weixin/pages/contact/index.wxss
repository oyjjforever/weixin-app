
page {
  height: 100%;
  background-color: #f5f5f5;
}
.contact-container {
  padding: 30rpx;
}
.contact-title {
  font-size: 36px;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
}
.contact-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
}
.card-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.card-left {
  display: flex;
  align-items: center;
  flex: 1;
}
.card-icon {
  width: 24px;
  height: 24px;
  margin-right: 20rpx;
  flex-shrink: 0;
}
.info-content {
  display: flex;
  flex-direction: column;
  flex: 1;
}
.info-label {
  font-size: 14px;
  color: #666;
  margin-bottom: 8rpx;
}
.info-detail {
  font-size: 16px;
  color: #333;
  font-weight: 500;
}
.arrow-icon {
  width: 16px;
  height: 16px;
  flex-shrink: 0;
}
.store-image {
  margin-top: 40rpx;
  border-radius: 16rpx;
  overflow: hidden;
}
.store-photo {
  width: 686rpx;
  height: 400rpx;
  display: block;
}
